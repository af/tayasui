{
  "name": "tayasui",
  "version": "0.0.1",
  "description": "Experiments with custom elements",
  "license": "MIT",
  "types": "tayasui.d.ts",
  "style": "src/",
  "scripts": {
    "build-dist": "bun build --minify --outfile=dist/bundle.css ./src/all.css",
    "build-playground": "bun build --minify --outdir=dist/ ./playground/index.html",
    "dev": "bun run --hot ./playground/server.ts",
    "lint": "biome lint --write",
    "tsc": "tsc --noEmit",
    "test": "biome lint && bun tsc"
  },
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "github.com/af/tayasui"
  },
  "keywords": [
    "css",
    "custom-elements"
  ],
  "author": "Aaron Franks (http://aaronfranks.com/)",
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@types/react": "^19.1.13",
    "marked": "^16.3.0",
    "typescript": "^5.9.2"
  }
}
