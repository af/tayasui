{
  "name": "tayasui",
  "version": "0.0.1",
  "description": "Experiments with custom elements",
  "types": "tayasui.d.ts",
  "style": "src/",
  "scripts": {
    "build-dist": "bun build --minify --outfile=dist/bundle.css ./src/components.css",
    "build-playground": "bun build --minify --outdir=dist/ ./playground/index.html",
    "dev": "bun run --hot ./playground/server.ts",
    "lint": "biome lint --write",
    "tsc": "tsc --noEmit",
    "test": "biome lint && bun tsc"
  },
  "repository": {
    "type": "git",
    "url": "github.com/af/tayasui"
  },
  "keywords": [
    "css"
  ],
  "author": "Aaron Franks (http://aaronfranks.com/)",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^2.0.6",
    "@types/react": "^19.1.8",
    "typescript": "^5.8.3"
  }
}
